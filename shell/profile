# ~/.profile: executed by the command interpreter for login shells.
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.

# XDG Manual Setup -- https://wiki.archlinux.org/title/XDG_Base_Directory
#   Since this profile is potentially used via WSL on windows, or remotely
#   on systems that do not configure the XDG base directories, and since
#   not all applications/utilities support it, we set the directories
#   manually here.
export XDG_CONFIG_HOME="${XDG_CONFIG_HOME:-$HOME/.config}"
export XDG_CACHE_HOME="${XDG_CACHE_HOME:-$HOME/.cache}"
export XDG_DATA_HOME="${XDG_DATA_HOME:-$HOME/.local/share}"
export XDG_STATE_HOME="${XDG_STATE_HOME:-$HOME/.local/state}"

# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
	. "$HOME/.bashrc"
    fi
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

# Setting VIM to respect XDG standard and setting it as the VISUAL editor
export VIMINIT="set nocp | source ${XDG_CONFIG_HOME:-$HOME/.config}/vim/vimrc"
if command -v vim >/dev/null ; then
    export VISUAL="$(command -v vim)"
fi

# Python Customizations
export PYTHONSTARTUP="${XDG_CONFIG_HOME:-$HOME/.config}/python/startup.py"
export PYTHONHISTFILE="${XDG_DATA_HOME:-$HOME/.local/share}/python/python_history"

# Enable TrueColor support
case $TERM in
   linux-truecolor |\
   screen-truecolor |\
   tmux-truecolor |\
   xterm-256color |\
   xterm-truecolor )	export COLORTERM=truecolor ;;
   vte*)
esac

